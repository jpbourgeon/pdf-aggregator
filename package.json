{
  "name": "cdg71-pdf-aggregator",
  "version": "0.1.0",
  "main": "main/index.js",
  "author": "Jean-Philippe Bourgeon <jeanphilippe.bourgeon@gmail.com> (http://bourgeon.jp.net)",
  "license": "CECILL-2.1",
  
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpbourgeon/cdg71-pdf-aggregator.git"
  },

  "scripts": {
    "start": "electron .",
    "build": "next build renderer && next export renderer",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "tdd": "cross-env ELECTRON_IS_DEV=1 jest --watchAll --verbose",
    "test": "npm run build && jest",
    "report": "npm run build && jest --coverage"
  },
  
  "dependencies": {
    "app-root-path": "^2.0.1",
    "deep-equal": "^1.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.4",
    "lowdb": "^1.0.0",
    "material-ui": "^1.0.0-beta.41",
    "material-ui-icons": "^1.0.0-beta.36",
    "next": "^5.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1"
  },
  
  "devDependencies": {
    "cross-env": "^5.1.4",
    "electron": "^2.0.0-beta.5",
    "electron-builder": "^20.8.1",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^22.4.3",
    "react-test-renderer": "^16.3.1"
  },
  
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>\\renderer\\out\\",
      "<rootDir>\\renderer\\.next\\",
      "<rootDir>\\dist\\"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>\\dist\\"
    ],
    "coverageReporters": [
      "text-summary",
      "text"
    ]
  },
  
  "build": {
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "main/static/icon.ico"
    }
  }

}
