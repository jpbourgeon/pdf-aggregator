{
  "name": "pdf-aggregator",
  "description": "A desktop app that aggregates all PDF files from a folder tree into a single PDF",
  "version": "0.0.0",
  "main": "main/index.js",
  "author": "Jean-Philippe Bourgeon <jeanphilippe.bourgeon@gmail.com> (http://bourgeon.jp.net)",
  "license": "CECILL-2.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jpbourgeon/pdf-aggregator.git"
  },
  "scripts": {
    "start": "cross-env DEBUG=app:* DEBUG_COLORS=1 ELECTRON_IS_DEV=1 electron .",
    "build": "next build renderer && next export renderer",
    "dist": "npm run build && electron-builder",
    "eslint": "eslint **/*.js",
    "postinstall": "electron-builder install-app-deps",
    "predist": "npm test",
    "pretest": "npm run eslint",
    "tdd": "cross-env DEBUG=app:* DEBUG_COLORS=1 ELECTRON_IS_DEV=1 jest --watchAll --verbose",
    "test": "cross-env DEBUG_COLORS=1 ELECTRON_IS_DEV=1 JEST_JUNIT_OUTPUT=\"test-results/jest/results.xml\" jest --ci  --testResultsProcessor=\"jest-junit\"",
    "test-report": "cross-env DEBUG_COLORS=1 ELECTRON_IS_DEV=1 jest --coverage --verbose"
  },
  "dependencies": {
    "@material-ui/core": "^1.1.0",
    "@material-ui/icons": "^1.1.0",
    "app-root-path": "^2.0.1",
    "classnames": "^2.2.5",
    "debug": "^3.1.0",
    "deep-equal": "^1.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-next": "git+https://github.com/jpbourgeon/electron-next#patch-1",
    "fs-extra": "^6.0.1",
    "jss": "^9.8.1",
    "lowdb": "^1.0.0",
    "next": "^6.0.3",
    "pdfjs": "^2.0.0-alpha.8",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-jss": "^8.4.0",
    "readdirp": "^2.1.0",
    "styled-jsx": "^2.2.6"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.42",
    "babel-core": "7.0.0-bridge.0",
    "cross-env": "^5.1.6",
    "electron": "^2.0.2",
    "electron-builder": "^20.15.1",
    "eslint": "^4.19.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^23.0.1",
    "jest-junit": "^4.0.0",
    "react-test-renderer": "^16.4.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/renderer/out/",
      "<rootDir>/renderer/.next/",
      "<rootDir>/dist/",
      "<rootDir>/db.json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/db.json"
    ],
    "coverageReporters": [
      "text-summary",
      "text"
    ]
  },
  "build": {
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    }
  }
}
